<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="LogsearchShipperGroup">
      <section name="LogsearchShipper" type="LogsearchShipper.Core.ConfigurationSections.LogsearchShipperSection, LogsearchShipper.Core" allowLocation="true" allowDefinition="Everywhere" />
    </sectionGroup>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <LogsearchShipperGroup>
    <LogsearchShipper servers="ingestor.meta.logsearch.io:443" ssl_ca="C:\Keys\ingestor.meta.logsearch.io.crt" timeout="23">
      <fileWatchers>
        <watch files="\\PKH-PPE-WEB24\Logs\TradingApi.log*" type="ci_log4net">
          <field key="@environment" value="DEV" />
          <field key="@service.name" value="TradingApi" />
        </watch>
      </fileWatchers>
    </LogsearchShipper>
  </LogsearchShipperGroup>
  <log4net>
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="EnvironmentDiagramLogger" />
        <acceptOnMatch value="false" />
      </filter>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%utcdate{ISO8601} [%thread] %-5level %logger - %.255message%newline" />
      </layout>
    </appender>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="LogsearchShipper.log" />
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="EnvironmentDiagramLogger" />
        <acceptOnMatch value="false" />
      </filter>
	  <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO" />
        <levelMax value="FATAL" />
      </filter>
      <appendToFile value="true" />
      <maximumFileSize value="10MB" />
      <maxSizeRollBackups value="2" />
      <layout type="log4net.Layout.PatternLayout">
        <IgnoresException value="False" />
        <converter>
          <name value="event_as_json" />
          <type value="LogsearchShipper.Core.JSONFragmentPatternConverter, LogsearchShipper.Core" />
        </converter>
        <converter>
          <name value="iso8601_date" />
          <type value="LogsearchShipper.Core.ISO8601DatePatternConverter, LogsearchShipper.Core" />
        </converter>
        <conversionPattern value="{&quot;@timestamp&quot;:&quot;%iso8601_date&quot;,%event_as_json,&quot;logger&quot;:&quot;%logger&quot;,&quot;level&quot;:&quot;%level&quot;}%n" />
      </layout>
    </appender>
    <appender name="EnvironmentDiagramRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="EnvironmentDiagramData.log" />
      <filter type="log4net.Filter.LoggerMatchFilter">
        <loggerToMatch value="EnvironmentDiagramLogger" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <appendToFile value="true" />
      <maximumFileSize value="10MB" />
      <maxSizeRollBackups value="2" />
      <layout type="log4net.Layout.PatternLayout">
        <IgnoresException value="False" />
        <converter>
          <name value="event_as_json" />
          <type value="LogsearchShipper.Core.JSONFragmentPatternConverter, LogsearchShipper.Core" />
        </converter>
        <converter>
          <name value="iso8601_date" />
          <type value="LogsearchShipper.Core.ISO8601DatePatternConverter, LogsearchShipper.Core" />
        </converter>
        <conversionPattern value="{&quot;@timestamp&quot;:&quot;%iso8601_date&quot;,%event_as_json,&quot;logger&quot;:&quot;%logger&quot;,&quot;level&quot;:&quot;%level&quot;}%n" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="EnvironmentDiagramRollingFileAppender" />
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="log4net" publicKeyToken="669e0ddf0bb1aa2a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-1.2.13.0" newVersion="1.2.13.0" />
      </dependentAssembly>
    </assemblyBinding>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Topshelf" publicKeyToken="b800c4cfcdeea87b" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.1.122.0" newVersion="3.1.122.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>